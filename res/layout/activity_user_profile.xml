<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/user_apartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/user_bike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="17sp" />

    <TextView
        android:id="@+id/user_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/user_mobile"
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_electronc"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_house"
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/user_earned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Amount Earned"
        android:textColor="#3F8C09"
        android:textSize="22sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/user_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="abc" />




</LinearLayout>